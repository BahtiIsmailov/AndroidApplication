<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.welcomefragment1.login.forgetpassword.ForgetPasswordFromAuth">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_back_from_auth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_soft_bold"
        android:text="Сброс пароля"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backArrow" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Введи email который ты указывал при регистрации. На него прийдет ссылка для сброса пароля."
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/LoginEditText"
        android:textSize="17sp"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="@+id/LoginEditText"
        app:layout_constraintEnd_toEndOf="@+id/LoginEditText"/>

    <EditText
        android:id="@+id/LoginEditText"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_for_forget_password"
        android:drawableStart="@drawable/ic_pocta"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:fontFamily="@font/proxima_soft_bold"
        android:hint="@string/login"
        android:paddingStart="16dp"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.example.englishapp.view.customview.SimplePushButtonView
        android:id="@+id/button_registration"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/proxima_soft_bold"
        android:text="Отправить"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>