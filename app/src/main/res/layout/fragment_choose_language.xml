<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.welcomefragment1.login.authsteps.welcome.chooselanguage.ChooseLanguageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleLanguage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/language_item"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/flag"
        app:lottie_repeatCount="5"
        tools:visibility="visible" />

</FrameLayout>